<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">



    <application>
        <resource-bundle>
            <base-name>Locales</base-name>
            <var>locales</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/main.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>viewReport</from-outcome>
            <to-view-id>/management/reports/view.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>addStudent</from-outcome>
            <to-view-id>/management/students/add.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>removeStudent</from-outcome>
            <to-view-id>/management/students/remove.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>addExam</from-outcome>
            <to-view-id>/management/exams/add.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>removeExam</from-outcome>
            <to-view-id>/management/exams/remove.xhtml</to-view-id>
        </navigation-case>

    </navigation-rule>

    <navigation-rule>
        <from-view-id>/management/students/add.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
        </navigation-case>

    </navigation-rule>

    <navigation-rule>
        <from-view-id>/management/exams/add.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
        </navigation-case>

    </navigation-rule>

    <managed-bean>
        <managed-bean-name>ExamControllerBean</managed-bean-name>
        <managed-bean-class>com.jtechnologies.labs3.controllers.ExamControllerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>StudentControllerBean</managed-bean-name>
        <managed-bean-class>com.jtechnologies.labs3.controllers.StudentControllerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>


</faces-config>